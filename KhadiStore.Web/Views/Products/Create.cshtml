@model KhadiStore.Application.DTOs.CreateProductDto
@{
    ViewData["Title"] = "Add Product";
    var categories = ViewBag.Categories as IEnumerable<KhadiStore.Application.DTOs.CategoryDto>;
}

<div class="row mb-4">
    <div class="col">
        <h1 class="page-title">
            <i class="fas fa-plus-square me-2"></i>
            Add New Product
        </h1>
    </div>
    <div class="col-auto">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Products
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Product Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select">
                            <option value="">Select Category</option>
                            @if (categories != null)
                            {
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price (₹)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                        <input asp-for="StockQuantity" class="form-control" type="number" min="0">
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="MinStockLevel" class="form-label">Minimum Stock Level</label>
                        <input asp-for="MinStockLevel" class="form-control" type="number" min="0">
                        <span asp-validation-for="MinStockLevel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="FabricType" class="form-label">Fabric Type</label>
                        <select asp-for="FabricType" class="form-select">
                            <option value="">Select Fabric</option>
                            <option value="Khadi Cotton">Khadi Cotton</option>
                            <option value="Cotton">Cotton</option>
                            <option value="Silk">Silk</option>
                            <option value="Handloom">Handloom</option>
                            <option value="Linen">Linen</option>
                            <option value="Wool">Wool</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Color" class="form-label">Color</label>
                        <input asp-for="Color" class="form-control" placeholder="e.g., White, Red">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Size" class="form-label">Size</label>
                        <select asp-for="Size" class="form-select">
                            <option value="">Select Size</option>
                            <option value="XS">XS</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                            <option value="XXL">XXL</option>
                            <option value="Free Size">Free Size</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Origin" class="form-label">Origin (State)</label>
                        <input asp-for="Origin" class="form-control" placeholder="e.g., Gujarat">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Pattern" class="form-label">Pattern</label>
                        <select asp-for="Pattern" class="form-select">
                            <option value="">Select Pattern</option>
                            <option value="Solid">Solid</option>
                            <option value="Striped">Striped</option>
                            <option value="Printed">Printed</option>
                            <option value="Embroidered">Embroidered</option>
                            <option value="Border">Border</option>
                            <option value="Plain">Plain</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="GST" class="form-label">GST (%)</label>
                        <select asp-for="GST" class="form-select">
                            <option value="0">0%</option>
                            <option value="5" selected>5%</option>
                            <option value="12">12%</option>
                            <option value="18">18%</option>
                            <option value="28">28%</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="Weight" class="form-label">Weight (grams)</label>
                        <input asp-for="Weight" class="form-control" type="number" step="0.1" min="0">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="SKU" class="form-label">SKU</label>
                        <input asp-for="SKU" class="form-control" placeholder="Product code">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ImagePath" class="form-label">Image Path</label>
                        <input asp-for="ImagePath" class="form-control" placeholder="Path to product image">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-md-2">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Save Product
                </button>
            </div>
        </form>
    </div>
</div>