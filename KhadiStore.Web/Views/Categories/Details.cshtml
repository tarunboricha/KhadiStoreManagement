@model KhadiStore.Application.DTOs.CategoryDto
@{
    ViewData["Title"] = "Category Details";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="page-title">
            <i class="fas fa-tag me-2"></i>
            @Model.Name
        </h1>
    </div>
    <div class="col-auto">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i> Edit Category
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Categories
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <!-- Category Image -->
        <div class="card mb-4">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-height: 200px;">
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 200px;">
                        <i class="fas fa-image fa-3x text-muted"></i>
                    </div>
                }
                <h4>@Model.Name</h4>
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Quick Stats</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <div class="h4 text-primary">@Model.ProductCount</div>
                            <small class="text-muted">Products</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="h4 text-success">@(Model.IsActive ? "Active" : "Inactive")</div>
                        <small class="text-muted">Status</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <!-- Category Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Category Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3"><strong>Name:</strong></div>
                    <div class="col-md-9">@Model.Name</div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Description:</strong></div>
                        <div class="col-md-9">@Model.Description</div>
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-3"><strong>Status:</strong></div>
                    <div class="col-md-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3"><strong>Products:</strong></div>
                    <div class="col-md-9">
                        @if (Model.ProductCount > 0)
                        {
                            <span class="badge bg-primary">@Model.ProductCount</span>
                            <a href="@Url.Action("Index", "Products", new { categoryId = Model.Id })" class="btn btn-sm btn-outline-primary ms-2">
                                View Products
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No products in this category</span>
                            <a href="@Url.Action("Create", "Products", new { categoryId = Model.Id })" class="btn btn-sm btn-primary ms-2">
                                Add First Product
                            </a>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3"><strong>Created:</strong></div>
                    <div class="col-md-9">@Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2 d-md-block">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i> Edit Category
                    </a>
                    <a href="@Url.Action("Create", "Products", new { categoryId = Model.Id })" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i> Add Product
                    </a>
                    @if (Model.ProductCount > 0)
                    {
                        <a href="@Url.Action("Index", "Products", new { categoryId = Model.Id })" class="btn btn-info">
                            <i class="fas fa-eye me-1"></i> View Products
                        </a>
                    }
                    @if (Model.ProductCount == 0)
                    {
                        <button type="button" class="btn btn-outline-danger" onclick="deleteCategory(@Model.Id, '@Model.Name')">
                            <i class="fas fa-trash me-1"></i> Delete Category
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCategory(id, name) {
            if (confirm(`Are you sure you want to delete the category "${name}"?`)) {
                $.post('@Url.Action("Delete")', { id: id })
                    .done(function() {
                        window.location.href = '@Url.Action("Index")';
                    })
                    .fail(function() {
                        alert('Error occurred while deleting category.');
                    });
            }
        }
    </script>
}