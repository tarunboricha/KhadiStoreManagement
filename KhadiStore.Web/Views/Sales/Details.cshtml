@using KhadiStore.Domain.Entities
@model KhadiStore.Application.DTOs.SaleDto
@{
    ViewData["Title"] = "Sale Details";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="page-title text-primary">
            <i class="fas fa-receipt me-2 text-success"></i>
            Sale Details - @Model.InvoiceNumber
            <small class="text-muted fs-6 ms-2">| बिक्री विवरण</small>
        </h1>
    </div>
    <div class="col-auto">
        <div class="btn-group">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Sales
            </a>
            <a href="@Url.Action("Invoice", new { id = Model.Id })" class="btn btn-primary" target="_blank">
                <i class="fas fa-print me-1"></i> Print Invoice
            </a>
            @if (Model.Status == "Completed")
            {
                @if (ViewBag.HasReturnableItems == false)
                {
                    <a href="@Url.Action("Create", "Returns", new { saleId = Model.Id })"
                       class="btn btn-success return-btn"
                       title="View return history - All items already returned">
                        <i class="fas fa-check-double me-1"></i> View Returns History
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Create", "Returns", new { saleId = Model.Id })"
                       class="btn btn-warning return-btn"
                       title="Process return for this sale">
                        <i class="fas fa-undo-alt me-1"></i> Process Return
                    </a>
                }
            }
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="fas fa-plus me-1"></i> New Sale
            </a>
        </div>
    </div>
</div>

<!-- Success Alert -->
<div class="alert alert-success border-0 shadow-sm" role="alert">
    <div class="d-flex align-items-center">
        <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
        <div>
            <h5 class="alert-heading mb-1">Sale Completed Successfully!</h5>
            <p class="mb-0">Invoice number <strong>@Model.InvoiceNumber</strong> has been generated and is ready for printing.</p>
        </div>
    </div>
</div>

<!-- Return Information Alert -->
@if (ViewBag.HasReturns == true)
{
    <div class="alert alert-info border-0 shadow-sm" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-undo-alt fa-2x me-3 text-info"></i>
            <div class="flex-grow-1">
                <h6 class="alert-heading mb-1">Returns Notice</h6>
                <p class="mb-0">This sale has associated returns. <strong>Check return history for complete information.</strong></p>
            </div>
            <a href="@Url.Action("Index", "Returns", new { saleId = Model.Id })" class="btn btn-outline-info btn-sm">
                <i class="fas fa-eye me-1"></i> View Returns
            </a>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Sale Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #138808 0%, #28a745 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-info-circle me-2"></i>Sale Information | बिक्री जानकारी
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="sale-info-grid">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-hashtag fa-2x text-primary me-3"></i>
                                    <div>
                                        <small class="text-muted">Invoice Number</small>
                                        <div class="fw-bold fs-5 text-primary">@Model.InvoiceNumber</div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar fa-2x text-info me-3"></i>
                                    <div>
                                        <small class="text-muted">Sale Date</small>
                                        <div class="fw-bold">@Model.SaleDate.ToString("dd MMM yyyy, hh:mm tt")</div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-flag fa-2x text-success me-3"></i>
                                    <div>
                                        <small class="text-muted">Status</small>
                                        <div>
                                            @switch (Model.Status)
                                            {
                                                case "Completed":
                                                    <span class="badge bg-success fs-6 px-3 py-2">
                                                        <i class="fas fa-check me-1"></i>@Model.Status
                                                    </span>
                                                    break;
                                                case "Pending":
                                                    <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                                        <i class="fas fa-clock me-1"></i>@Model.Status
                                                    </span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge bg-danger fs-6 px-3 py-2">
                                                        <i class="fas fa-times me-1"></i>@Model.Status
                                                    </span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary fs-6 px-3 py-2">@Model.Status</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="sale-info-grid">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-credit-card fa-2x text-purple me-3"></i>
                                    <div>
                                        <small class="text-muted">Payment Method</small>
                                        <div class="fw-bold">
                                            @switch (Model.PaymentMethod)
                                            {
                                                case "Cash":
                                                    <i class="fas fa-money-bill-wave text-success me-1"></i>
                                            
                                                    <text>Cash</text>
                                                    break;
                                                case "Card":
                                                    <i class="fas fa-credit-card text-primary me-1"></i>
                                            
                                                    <text>Card</text>
                                                    break;
                                                case "UPI":
                                                    <i class="fas fa-mobile-alt text-info me-1"></i>
                                            
                                                    <text>UPI</text>
                                                    break;
                                                default:
                                                    <i class="fas fa-rupee-sign me-1"></i>
                                            
                                                    <text>@Model.PaymentMethod</text>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.PaymentReference))
                            {
                                <div class="info-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-link fa-2x text-secondary me-3"></i>
                                        <div>
                                            <small class="text-muted">Payment Reference</small>
                                            <div class="fw-bold font-monospace">@Model.PaymentReference</div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-boxes fa-2x text-warning me-3"></i>
                                    <div>
                                        <small class="text-muted">Total Items</small>
                                        <div class="fw-bold fs-5 text-warning">@Model.TotalItems</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-sticky-note me-1"></i>Additional Notes:
                        </h6>
                        <div class="border rounded p-3 bg-light">
                            <div class="font-monospace small">@Html.Raw(Model.Notes.Replace("\n", "<br>"))</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Customer Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-user me-2"></i>Customer Information | ग्राहक जानकारी
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(Model.CustomerName))
                {
                    <div class="row">
                        <div class="col-md-8">
                            <div class="customer-profile d-flex align-items-center">
                                <div class="avatar-circle me-4">
                                    <i class="fas fa-user fa-2x text-white"></i>
                                </div>
                                <div>
                                    <div class="mb-2">
                                        <small class="text-muted">Customer Name</small>
                                        <div class="fw-bold fs-5">
                                            @if (Model.CustomerId.HasValue)
                                            {
                                                <a href="@Url.Action("Details", "Customers", new { id = Model.CustomerId })"
                                                   class="text-decoration-none text-primary">
                                                    @Model.CustomerName
                                                </a>
                                            }
                                            else
                                            {
                                                @Model.CustomerName
                                            }
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrWhiteSpace(Model.CustomerPhone))
                                    {
                                        <div>
                                            <small class="text-muted">Phone Number</small>
                                            <div class="fw-semibold">
                                                <i class="fas fa-phone text-success me-1"></i>@Model.CustomerPhone
                                                <a href="tel:@Model.CustomerPhone" class="btn btn-sm btn-outline-success ms-2">
                                                    <i class="fas fa-phone me-1"></i>Call
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (Model.CustomerId.HasValue)
                            {
                                <a href="@Url.Action("Details", "Customers", new { id = Model.CustomerId })"
                                   class="btn btn-outline-primary">
                                    <i class="fas fa-user-circle me-1"></i> View Profile
                                </a>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-user-times fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Walk-in Customer</h5>
                        <p class="text-muted mb-0">No customer information was recorded for this sale</p>
                    </div>
                }
            </div>
        </div>

        <!-- Sale Items -->
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-shopping-cart me-2"></i>Items Purchased | खरीदे गए आइटम
                    </h5>
                    @if (Model.Status == "Completed")
                    {
                        <a href="@Url.Action("Create", "Returns", new { saleId = Model.Id })"
                           class="btn btn-warning btn-sm return-btn">
                            <i class="fas fa-undo-alt me-1"></i> Process Return
                        </a>
                    }
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 35%">
                                    <i class="fas fa-tag text-primary me-1"></i>Product
                                </th>
                                <th class="text-center" style="width: 10%">
                                    <i class="fas fa-boxes text-success me-1"></i>Qty
                                </th>
                                <th class="text-end" style="width: 15%">
                                    <i class="fas fa-rupee-sign text-info me-1"></i>Unit Price
                                </th>
                                <th class="text-end" style="width: 8%">
                                    <i class="fas fa-percent text-secondary me-1"></i>Discount
                                </th>
                                <th class="text-end" style="width: 20%">
                                    <i class="fas fa-calculator text-danger me-1"></i>Line Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SaleItems)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <div class="product-info">
                                            <div class="fw-semibold text-dark">@item.ProductName</div>
                                            <small class="text-muted">
                                                <i class="fas fa-barcode me-1"></i>Product ID: @item.ProductId
                                            </small>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border fs-6 px-3 py-2">@item.Quantity</span>
                                    </td>
                                    <td class="text-end">
                                        <strong>₹@item.UnitPrice.ToString("N2")</strong>
                                    </td>
                                    <td class="text-end">
                                        <strong class="fs-6">₹@item.DiscountAmount.ToString("N2")</strong>
                                    </td>
                                    <td class="text-end">
                                        <strong class="fs-6">₹@item.LineTotal.ToString("N2")</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary & Actions Sidebar -->
    <div class="col-lg-4">
        <!-- Sale Summary -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-calculator me-2"></i>Sale Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="summary-section">
                    <div class="summary-item d-flex justify-content-between py-2">
                        <span><i class="fas fa-calculator text-info me-2"></i>Subtotal:</span>
                        <span class="fw-semibold">₹@Model.SubTotal.ToString("N2")</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between py-2">
                        <span><i class="fas fa-percent text-warning me-2"></i>GST Amount:</span>
                        <span class="fw-semibold">₹@Model.GSTAmount.ToString("N2")</span>
                    </div>
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="summary-item d-flex justify-content-between py-2 text-success">
                            <span><i class="fas fa-tag me-2"></i>Discount:</span>
                            <span class="fw-semibold">- ₹@Model.DiscountAmount.ToString("N2")</span>
                        </div>
                    }
                    <hr class="my-3">
                    <div class="summary-item d-flex justify-content-between py-2">
                        <strong class="fs-5 text-primary">
                            <i class="fas fa-rupee-sign me-2"></i>Grand Total:
                        </strong>
                        <strong class="fs-4 text-primary">₹@Model.TotalAmount.ToString("N2")</strong>
                    </div>
                </div>

                <div class="action-buttons mt-4 d-grid gap-2">
                    <a href="@Url.Action("Invoice", new { id = Model.Id })"
                       class="btn btn-primary" target="_blank">
                        <i class="fas fa-print me-1"></i> Print Invoice
                    </a>
                    @if (Model.Status == "Completed")
                    {
                        <a href="@Url.Action("Create", "Returns", new { saleId = Model.Id })"
                           class="btn btn-warning return-btn">
                            <i class="fas fa-undo-alt me-1"></i> Process Return
                        </a>
                    }
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i> Create New Sale
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1"></i> View All Sales
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-light">
                <h6 class="mb-0 text-dark">
                    <i class="fas fa-chart-bar me-2"></i>Quick Stats | त्वरित आँकड़े
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center g-3">
                    <div class="col-6">
                        <div class="stat-box p-3 rounded" style="background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);">
                            <div class="h4 text-primary mb-1">@Model.SaleItems.Count()</div>
                            <small class="text-muted">Product Types</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-box p-3 rounded" style="background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);">
                            <div class="h4 text-success mb-1">@Model.TotalItems</div>
                            <small class="text-muted">Total Quantity</small>
                        </div>
                    </div>
                </div>

                @if (Model.Status == "Completed")
                {
                    <hr class="my-3">
                    <div class="return-policy-notice text-center">
                        <div class="alert alert-warning py-2 mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            <small><strong>Return Policy:</strong> Items can be returned within <strong>30 days</strong> of purchase with receipt.</small>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Related Returns (if any) -->
        @if (ViewBag.ExistingReturnsCount > 0)
        {
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header @(ViewBag.HasReturnableItems == false ? "bg-success" : "bg-warning") text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-undo-alt me-2"></i>Return Status
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.HasReturnableItems == false)
                    {
                        <div class="text-center">
                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                            <h6 class="text-success">Fully Returned</h6>
                            <p class="small text-muted mb-2">All items have been returned</p>
                            <div class="small">
                                <strong>@ViewBag.ExistingReturnsCount</strong> return(s)<br>
                                <strong>₹@ViewBag.TotalReturnedAmount.ToString("N0")</strong> refunded
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center">
                            <i class="fas fa-exclamation-triangle fa-2x text-warning mb-2"></i>
                            <h6 class="text-warning">Partial Returns</h6>
                            <p class="small text-muted mb-2">Some items have been returned</p>
                            <div class="small">
                                <strong>@ViewBag.ExistingReturnsCount</strong> return(s)<br>
                                <strong>₹@ViewBag.TotalReturnedAmount.ToString("N0")</strong> refunded
                            </div>
                        </div>
                    }

                    <div class="mt-3 d-grid">
                        <a href="@Url.Action("Index", "Returns", new { saleId = Model.Id })"
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i> View Return Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide success alert after 5 seconds
            setTimeout(function() {
                $('.alert-success').fadeOut('slow');
            }, 5000);

            // Enhanced return button confirmation
            $('.return-btn').on('click', function(e) {
                const saleAmount = '@Model.TotalAmount.ToString("N2")';
                const invoiceNumber = '@Model.InvoiceNumber';

                Swal.fire({
                    title: 'Process Return?',
                    html: `
                        <div class="text-start">
                            <p>You are about to process a return for:</p>
                            <div class="alert alert-info">
                                <strong>Invoice:</strong> ${invoiceNumber}<br>
                                <strong>Amount:</strong> ₹${saleAmount}<br>
                                <strong>Items:</strong> @Model.TotalItems
                            </div>
                            <p class="small text-muted">This will allow you to select specific items to return and update inventory accordingly.</p>
                        </div>
                    `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#ffc107',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="fas fa-undo-alt me-1"></i> Continue to Return Form',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = $(e.target).closest('a').attr('href');
                    } else {
                        e.preventDefault();
                    }
                });

                e.preventDefault();
            });

            // Animate elements on page load
            $('.card').each(function(i) {
                $(this).css('opacity', '0').animate({
                    opacity: 1
                }, 300 + (i * 100));
            });

            // Initialize tooltips
            $('[title]').tooltip();
        });
    </script>

    <!-- Include SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        .info-item {
            border-left: 4px solid transparent;
            padding-left: 1rem;
            transition: all 0.3s ease;
        }

            .info-item:hover {
                border-left-color: #28a745;
                background-color: rgba(40, 167, 69, 0.05);
                border-radius: 0 4px 4px 0;
            }

        .avatar-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
        }

        .summary-item {
            border-bottom: 1px solid #f8f9fa;
        }

            .summary-item:last-child {
                border-bottom: none;
            }

        .stat-box:hover {
            transform: translateY(-2px);
            transition: transform 0.2s ease;
        }

        .product-info:hover {
            transform: translateX(5px);
            transition: transform 0.2s ease;
        }

        .return-item:hover {
            background-color: rgba(255, 193, 7, 0.1) !important;
        }

        .return-btn:hover {
            transform: scale(1.05);
            transition: transform 0.2s ease;
        }

        .text-purple {
            color: #6f42c1 !important;
        }

        .customer-profile:hover .avatar-circle {
            transform: rotate(5deg);
            transition: transform 0.3s ease;
        }
    </style>
}