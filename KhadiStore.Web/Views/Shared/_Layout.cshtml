<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Khadi India Store Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KhadiStore.Web.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* Indian Khadi Theme CSS */
        :root {
            --khadi-orange: #FF6600;
            --khadi-white: #FFFFFF;
            --khadi-green: #138808;
            --khadi-navy: #000080;
            --khadi-cream: #F5F5DC;
            --khadi-gold: #DAA520;
            --khadi-brown: #8B4513;
            --khadi-saffron: #FF9933;
        }

        body {
            font-family: 'Open Sans', 'Noto Sans Devanagari', sans-serif;
            background: linear-gradient(135deg, var(--khadi-cream) 0%, #FAFAF0 100%);
            color: #333;
        }

        .navbar-khadi {
            background: linear-gradient(90deg, var(--khadi-saffron) 0%, var(--khadi-white) 50%, var(--khadi-green) 100%);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border-bottom: 3px solid var(--khadi-gold);
        }

        .navbar-brand {
            font-weight: 700 !important;
            font-size: 1.8rem !important;
            color: var(--khadi-navy) !important;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .navbar-nav .nav-link {
            color: var(--khadi-navy) !important;
            font-weight: 600;
            padding: 0.75rem 1rem !important;
            border-radius: 8px;
            margin: 0 2px;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.8);
                transform: translateY(-1px);
                color: var(--khadi-orange) !important;
            }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            background: white;
            border-top: 4px solid var(--khadi-orange);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .card-header {
            background: linear-gradient(135deg, var(--khadi-orange) 0%, var(--khadi-saffron) 100%);
            color: white;
            border-radius: 15px 15px 0 0 !important;
            font-weight: 600;
            padding: 1.25rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--khadi-orange) 0%, var(--khadi-saffron) 100%);
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(255, 102, 0, 0.3);
                background: linear-gradient(135deg, var(--khadi-saffron) 0%, var(--khadi-orange) 100%);
            }

        .btn-success {
            background: linear-gradient(135deg, var(--khadi-green) 0%, #28a745 100%);
            border: none;
            border-radius: 8px;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--khadi-gold) 0%, #ffc107 100%);
            border: none;
            color: #333;
            font-weight: 600;
        }

        .alert {
            border: none;
            border-radius: 12px;
            border-left: 5px solid;
        }

        .alert-success {
            background-color: #d4edda;
            border-left-color: var(--khadi-green);
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-left-color: #dc3545;
            color: #721c24;
        }

        .table {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .table thead th {
                background: linear-gradient(135deg, var(--khadi-orange) 0%, var(--khadi-saffron) 100%);
                color: white;
                font-weight: 600;
                border: none;
                padding: 1rem;
            }

            .table tbody tr {
                transition: background-color 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: rgba(255, 153, 51, 0.1);
                }

        .form-control, .form-select {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 0.75rem;
            transition: border-color 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--khadi-orange);
                box-shadow: 0 0 0 0.2rem rgba(255, 102, 0, 0.25);
            }

        .stats-card {
            background: linear-gradient(135deg, var(--khadi-orange) 0%, var(--khadi-saffron) 100%);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            text-align: center;
            transition: transform 0.3s ease;
            border: none;
        }

            .stats-card:hover {
                transform: translateY(-5px);
            }

            .stats-card i {
                font-size: 3rem;
                margin-bottom: 1rem;
                opacity: 0.8;
            }

            .stats-card h3 {
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 0.5rem;
            }

        .indian-pattern {
            background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ff9933' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        }

        .footer {
            background: linear-gradient(90deg, var(--khadi-navy) 0%, var(--khadi-green) 100%);
            color: white;
            padding: 2rem 0;
            margin-top: 3rem;
            display: none;
        }

        .page-title {
            color: var(--khadi-navy);
            font-weight: 700;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 3px solid var(--khadi-orange);
            display: inline-block;
        }
    </style>
</head>
<body class="indian-pattern">
    <nav class="navbar navbar-expand-lg navbar-khadi sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store text-warning me-2"></i>
                खादी भारत स्टोर
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="returnsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-undo-alt me-1"></i>
                            Returns
                            @if (ViewBag.PendingReturns > 0)
                            {
                                <span class="badge bg-warning text-dark ms-1">@ViewBag.PendingReturns</span>
                            }
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="returnsDropdown">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Returns")">
                                    <i class="fas fa-list me-2 text-primary"></i>Completed Returns
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Sales")">
                                    <i class="fas fa-plus me-2 text-primary"></i>Process New Return
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="productsDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-tshirt me-1"></i> Products
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Products")">All Products</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("LowStock", "Products")">Low Stock</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create", "Products")">Add Product</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="salesDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-cash-register me-1"></i> Sales
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Sales")">All Sales</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Create", "Sales")">New Sale</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Customers")">
                            <i class="fas fa-users me-1"></i> Customers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Categories")">
                            <i class="fas fa-tags me-1"></i> Categories
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid py-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-store me-2"></i>Khadi India Store Management</h5>
                    <p class="mb-0">Empowering traditional Indian textiles through modern technology</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        <i class="fas fa-heart text-danger me-1"></i>
                        Made in India with pride
                    </p>
                    <small>&copy; 2025 - Khadi India Store Management</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>