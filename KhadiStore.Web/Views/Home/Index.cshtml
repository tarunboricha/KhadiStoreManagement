@{
    ViewData["Title"] = "Dashboard";
    var stats = ViewBag.Stats as KhadiStore.Application.DTOs.DashboardStatsDto;
    var chartData = ViewBag.ChartData as KhadiStore.Application.DTOs.SalesChartDto;
    var lowStockProducts = ViewBag.LowStockProducts as IEnumerable<KhadiStore.Application.DTOs.LowStockProductDto>;
}

<div class="row mb-4">
    <div class="col">
        <h1 class="page-title">
            <i class="fas fa-home me-2"></i>
            Dashboard
        </h1>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card">
            <i class="fas fa-rupee-sign"></i>
            <h3>₹@stats?.TodaySales.ToString("N0")</h3>
            <p class="mb-0">Today's Sales</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card" style="background: linear-gradient(135deg, var(--khadi-green) 0%, #28a745 100%);">
            <i class="fas fa-shopping-cart"></i>
            <h3>@stats?.TodayOrders</h3>
            <p class="mb-0">Today's Orders</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card" style="background: linear-gradient(135deg, var(--khadi-gold) 0%, #ffc107 100%); color: #333;">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>@stats?.LowStockItems</h3>
            <p class="mb-0">Low Stock Items</p>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stats-card" style="background: linear-gradient(135deg, var(--khadi-navy) 0%, #6c757d 100%);">
            <i class="fas fa-users"></i>
            <h3>@stats?.TotalCustomers</h3>
            <p class="mb-0">Total Customers</p>
        </div>
    </div>
</div>

<!-- Charts and Quick Stats -->
<div class="row">
    <div class="col-xl-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Sales Overview (Last 7 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="salesChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alert</h5>
            </div>
            <div class="card-body p-0">
                @if (lowStockProducts != null && lowStockProducts.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var product in lowStockProducts.Take(5))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@product.Name</h6>
                                        <small class="text-muted">@product.Category</small>
                                    </div>
                                    <span class="badge bg-warning text-dark">@product.Stock left</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <p>All products are well stocked!</p>
                    </div>
                }
            </div>
            @if (lowStockProducts != null && lowStockProducts.Any())
            {
                <div class="card-footer">
                    <a href="@Url.Action("LowStock", "Products")" class="btn btn-warning btn-sm w-100">
                        View All Low Stock Items
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "Sales")" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-plus-circle fa-2x mb-2 d-block"></i>
                            New Sale
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "Products")" class="btn btn-success w-100 py-3">
                            <i class="fas fa-plus-square fa-2x mb-2 d-block"></i>
                            Add Product
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Create", "Customers")" class="btn btn-info w-100 py-3">
                            <i class="fas fa-user-plus fa-2x mb-2 d-block"></i>
                            Add Customer
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="@Url.Action("Index", "Sales")" class="btn btn-warning w-100 py-3">
                            <i class="fas fa-receipt fa-2x mb-2 d-block"></i>
                            View Sales
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Sales Chart
        const ctx = document.getElementById('salesChart').getContext('2d');
        const salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(chartData?.Labels ?? new List<string>())),
                datasets: [{
                    label: 'Daily Sales (₹)',
                    data: @Html.Raw(Json.Serialize(chartData?.Values ?? new List<decimal>())),
                    borderColor: '#FF6600',
                    backgroundColor: 'rgba(255, 102, 0, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '₹' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });
    </script>
}