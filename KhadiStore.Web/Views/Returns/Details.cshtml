@using KhadiStore.Domain.Entities
@model KhadiStore.Application.DTOs.ReturnDto
@{
    ViewData["Title"] = "Return Details";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="page-title text-primary">
            <i class="fas fa-undo-alt me-2 text-warning"></i>
            Return Details - @Model.ReturnNumber
            <small class="text-muted fs-6 ms-2">| रिटर्न विवरण</small>
        </h1>
    </div>
    <div class="col-auto">
        <div class="btn-group">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Returns
            </a>
            <a href="@Url.Action("ReturnReceipt", new { id = Model.Id })" class="btn btn-primary" target="_blank">
                <i class="fas fa-print me-1"></i> Print Receipt
            </a>
            @if (Model.Sale != null)
            {
                <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })" class="btn btn-info">
                    <i class="fas fa-receipt me-1"></i> View Original Sale
                </a>
            }
            <a href="@Url.Action("Index", "Sales")" class="btn btn-success">
                <i class="fas fa-plus me-1"></i> New Return
            </a>
        </div>
    </div>
</div>

<!-- Success Alert -->
<div class="alert alert-success border-0 shadow-sm" role="alert">
    <div class="d-flex align-items-center">
        <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
        <div>
            <h5 class="alert-heading mb-1">Return Processed Successfully!</h5>
            <p class="mb-0">Return number <strong>@Model.ReturnNumber</strong> has been completed and refund has been processed.</p>
        </div>
    </div>
</div>

<!-- Original Sale Information Alert -->
@if (Model.Sale != null)
{
    <div class="alert alert-info border-0 shadow-sm" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-receipt fa-2x me-3 text-info"></i>
            <div class="flex-grow-1">
                <h6 class="alert-heading mb-1">Original Sale Reference</h6>
                <p class="mb-0">This return is associated with sale <strong>@Model.Sale.InvoiceNumber</strong> from <strong>@Model.Sale.SaleDate.ToString("dd MMM yyyy")</strong>.</p>
            </div>
            <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })" class="btn btn-outline-info btn-sm">
                <i class="fas fa-eye me-1"></i> View Sale
            </a>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <!-- Return Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #ffc107 0%, #ff8c00 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-undo-alt me-2"></i>Return Information | रिटर्न जानकारी
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="return-info-grid">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-hashtag fa-2x text-warning me-3"></i>
                                    <div>
                                        <small class="text-muted">Return Number</small>
                                        <div class="fw-bold fs-5 text-warning">@Model.ReturnNumber</div>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar fa-2x text-info me-3"></i>
                                    <div>
                                        <small class="text-muted">Return Date</small>
                                        <div class="fw-bold">@Model.ReturnDate.ToString("dd MMM yyyy, hh:mm tt")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-flag fa-2x text-success me-3"></i>
                                    <div>
                                        <small class="text-muted">Status</small>
                                        <div>
                                            @switch (Model.Status)
                                            {
                                                case "Completed":
                                                    <span class="badge bg-success fs-6 px-3 py-2">
                                                        <i class="fas fa-check me-1"></i>@Model.Status
                                                    </span>
                                                    break;
                                                case "Pending":
                                                    <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                                        <i class="fas fa-clock me-1"></i>@Model.Status
                                                    </span>
                                                    break;
                                                case "Cancelled":
                                                    <span class="badge bg-danger fs-6 px-3 py-2">
                                                        <i class="fas fa-times me-1"></i>@Model.Status
                                                    </span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary fs-6 px-3 py-2">@Model.Status</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="return-info-grid">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-circle fa-2x text-danger me-3"></i>
                                    <div>
                                        <small class="text-muted">Return Reason</small>
                                        <div class="fw-bold">
                                            @switch (Model.ReturnReason)
                                            {
                                                case "Defective Product":
                                                    <i class="fas fa-tools text-danger me-1"></i>
                                                    <text>Defective Product</text>
                                                    break;
                                                case "Wrong Item Received":
                                                    <i class="fas fa-times-circle text-warning me-1"></i>
                                                    <text>Wrong Item Received</text>
                                                    break;
                                                case "Size/Fit Issue":
                                                    <i class="fas fa-ruler text-info me-1"></i>
                                                    <text>Size/Fit Issue</text>
                                                    break;
                                                case "Quality Issue":
                                                    <i class="fas fa-star-half-alt text-warning me-1"></i>
                                                    <text>Quality Issue</text>
                                                    break;
                                                default:
                                                    <i class="fas fa-question-circle me-1"></i>
                                                    <text>@Model.ReturnReason</text>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-credit-card fa-2x text-purple me-3"></i>
                                    <div>
                                        <small class="text-muted">Refund Method</small>
                                        <div class="fw-bold">
                                            @switch (Model.RefundMethod)
                                            {
                                                case "Cash":
                                                    <i class="fas fa-money-bill-wave text-success me-1"></i>
                                                    <text>Cash</text>
                                                    break;
                                                case "Card":
                                                    <i class="fas fa-credit-card text-primary me-1"></i>
                                                    <text>Card Refund</text>
                                                    break;
                                                case "UPI":
                                                    <i class="fas fa-mobile-alt text-info me-1"></i>
                                                    <text>UPI Transfer</text>
                                                    break;
                                                case "BankTransfer":
                                                    <i class="fas fa-university text-secondary me-1"></i>
                                                    <text>Bank Transfer</text>
                                                    break;
                                                default:
                                                    <i class="fas fa-rupee-sign me-1"></i>
                                                    <text>@Model.RefundMethod</text>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(Model.RefundReference))
                            {
                                <div class="info-item">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-link fa-2x text-secondary me-3"></i>
                                        <div>
                                            <small class="text-muted">Refund Reference</small>
                                            <div class="fw-bold font-monospace">@Model.RefundReference</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.AdditionalNotes))
                {
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-muted mb-2">
                            <i class="fas fa-sticky-note me-1"></i>Additional Notes:
                        </h6>
                        <div class="border rounded p-3 bg-light">
                            <div class="font-monospace small">@Html.Raw(Model.AdditionalNotes.Replace("\n", "<br>"))</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Customer Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-user me-2"></i>Customer Information | ग्राहक जानकारी
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Customer != null && !string.IsNullOrWhiteSpace(Model.Customer.Name))
                {
                    <div class="row">
                        <div class="col-md-8">
                            <div class="customer-profile d-flex align-items-center">
                                <div class="avatar-circle me-4">
                                    <i class="fas fa-user fa-2x text-white"></i>
                                </div>
                                <div>
                                    <div class="mb-2">
                                        <small class="text-muted">Customer Name</small>
                                        <div class="fw-bold fs-5">
                                            <a href="@Url.Action("Details", "Customers", new { id = Model.Customer.Id })"
                                               class="text-decoration-none text-primary">
                                                @Model.Customer.Name
                                            </a>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(Model.Customer.Phone))
                                    {
                                        <div>
                                            <small class="text-muted">Phone Number</small>
                                            <div class="fw-semibold">
                                                <i class="fas fa-phone text-success me-1"></i>@Model.Customer.Phone
                                                <a href="tel:@Model.Customer.Phone" class="btn btn-sm btn-outline-success ms-2">
                                                    <i class="fas fa-phone me-1"></i>Call
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("Details", "Customers", new { id = Model.Customer.Id })"
                               class="btn btn-outline-primary">
                                <i class="fas fa-user-circle me-1"></i> View Profile
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-user-times fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Walk-in Customer</h5>
                        <p class="text-muted mb-0">No customer information was recorded for this return</p>
                    </div>
                }
            </div>
        </div>

        <!-- Returned Items -->
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-box-open me-2"></i>Returned Items | वापस किए गए आइटम
                    </h5>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2">
                        @(Model.ReturnItems?.Sum(ri => ri.ReturnQuantity) ?? 0) Items
                    </span>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.ReturnItems?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 35%">
                                        <i class="fas fa-tag text-primary me-1"></i>Product
                                    </th>
                                    <th class="text-center" style="width: 10%">
                                        <i class="fas fa-undo text-warning me-1"></i>Returned Qty
                                    </th>
                                    <th class="text-end" style="width: 15%">
                                        <i class="fas fa-rupee-sign text-info me-1"></i>Unit Price
                                    </th>
                                    <th class="text-end" style="width: 10%">
                                        <i class="fas fa-percent text-secondary me-1"></i>GST Rate
                                    </th>
                                    <th class="text-end" style="width: 12%">
                                        <i class="fas fa-calculator text-success me-1"></i>GST Amount
                                    </th>
                                    <th class="text-end" style="width: 10%">
                                        <i class="fas fa-tag text-warning me-1"></i>Discount
                                    </th>
                                    <th class="text-end" style="width: 18%">
                                        <i class="fas fa-calculator text-danger me-1"></i>Line Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ReturnItems)
                                {
                                    <tr class="align-middle return-item">
                                        <td>
                                            <div class="product-info">
                                                <div class="fw-semibold text-dark">@item.ProductName</div>
                                                <small class="text-muted">
                                                    <i class="fas fa-barcode me-1"></i>Product ID: @item.ProductId
                                                </small>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-dark fs-6 px-3 py-2">@item.ReturnQuantity</span>
                                        </td>
                                        <td class="text-end">
                                            <strong>₹@item.UnitPrice.ToString("N2")</strong>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-light text-dark border">@item.GSTRate%</span>
                                        </td>
                                        <td class="text-end">
                                            <strong class="fs-6 text-success">₹@item.GSTAmount.ToString("N2")</strong>
                                        </td>
                                        <td class="text-end">
                                            <strong class="fs-6 text-warning">₹@item.DiscountAmount.ToString("N2")</strong>
                                        </td>
                                        <td class="text-end">
                                            <strong class="fs-6 text-danger">₹@item.LineTotal.ToString("N2")</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Items Found</h5>
                        <p class="text-muted">No returned items were recorded for this return.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Summary & Actions Sidebar -->
    <div class="col-lg-4">
        <!-- Return Summary -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-calculator me-2"></i>Refund Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="summary-section">
                    <div class="summary-item d-flex justify-content-between py-2">
                        <span><i class="fas fa-calculator text-info me-2"></i>Subtotal:</span>
                        <span class="fw-semibold">₹@Model.SubTotal.ToString("N2")</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between py-2">
                        <span><i class="fas fa-percent text-warning me-2"></i>GST Amount:</span>
                        <span class="fw-semibold">₹@Model.GSTAmount.ToString("N2")</span>
                    </div>
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="summary-item d-flex justify-content-between py-2 text-success">
                            <span><i class="fas fa-tag me-2"></i>Discount Applied:</span>
                            <span class="fw-semibold">₹@Model.DiscountAmount.ToString("N2")</span>
                        </div>
                    }
                    <hr class="my-3">
                    <div class="summary-item d-flex justify-content-between py-2">
                        <strong class="fs-5 text-success">
                            <i class="fas fa-money-bill-wave me-2"></i>Total Refunded:
                        </strong>
                        <strong class="fs-4 text-success">₹@Model.TotalAmount.ToString("N2")</strong>
                    </div>
                </div>
                <div class="action-buttons mt-4 d-grid gap-2">
                    <a href="@Url.Action("ReturnReceipt", new { id = Model.Id })"
                       class="btn btn-primary" target="_blank">
                        <i class="fas fa-print me-1"></i> Print Receipt
                    </a>
                    @if (Model.Sale != null)
                    {
                        <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })"
                           class="btn btn-info">
                            <i class="fas fa-receipt me-1"></i> View Original Sale
                        </a>
                    }
                    <a href="@Url.Action("Index", "Sales")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i> Process New Return
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1"></i> View All Returns
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-light">
                <h6 class="mb-0 text-dark">
                    <i class="fas fa-chart-bar me-2"></i>Return Stats | रिटर्न आंकड़े
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center g-3">
                    <div class="col-6">
                        <div class="stat-box p-3 rounded" style="background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);">
                            <div class="h4 text-warning mb-1">@(Model.ReturnItems?.Count() ?? 0)</div>
                            <small class="text-muted">Product Types</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="stat-box p-3 rounded" style="background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);">
                            <div class="h4 text-danger mb-1">@(Model.ReturnItems?.Sum(ri => ri.ReturnQuantity) ?? 0)</div>
                            <small class="text-muted">Total Returned</small>
                        </div>
                    </div>
                </div>
                <hr class="my-3">
                <div class="refund-status-notice text-center">
                    <div class="alert alert-success py-2 mb-0">
                        <i class="fas fa-check-circle me-1"></i>
                        <small><strong>Status:</strong> Refund processed successfully via <strong>@Model.RefundMethod</strong></small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Original Sale Reference -->
        @if (Model.Sale != null)
        {
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Original Sale
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-shopping-cart fa-2x text-info mb-2"></i>
                        <h6 class="text-info">@Model.Sale.InvoiceNumber</h6>
                        <p class="small text-muted mb-2">@Model.Sale.SaleDate.ToString("dd MMM yyyy")</p>
                        <div class="small">
                            <strong>Original Amount:</strong><br>
                            <strong class="text-info">₹@Model.Sale.TotalAmount.ToString("N2")</strong>
                        </div>
                    </div>
                    <div class="mt-3 d-grid">
                        <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })"
                           class="btn btn-outline-info btn-sm">
                            <i class="fas fa-eye me-1"></i> View Sale Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-hide success alert after 5 seconds
            setTimeout(function() {
                $('.alert-success').fadeOut('slow');
            }, 5000);

            // Animate elements on page load
            $('.card').each(function(i) {
                $(this).css('opacity', '0').animate({
                    opacity: 1
                }, 300 + (i * 100));
            });

            // Initialize tooltips
            $('[title]').tooltip();

            // Enhance return item rows
            $('.return-item').hover(
                function() {
                    $(this).addClass('bg-light');
                },
                function() {
                    $(this).removeClass('bg-light');
                }
            );
        });
    </script>

    <!-- Include SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        .info-item {
            border-left: 4px solid transparent;
            padding-left: 1rem;
            transition: all 0.3s ease;
        }

            .info-item:hover {
                border-left-color: #ffc107;
                background-color: rgba(255, 193, 7, 0.05);
                border-radius: 0 4px 4px 0;
            }

        .avatar-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
        }

        .summary-item {
            border-bottom: 1px solid #f8f9fa;
        }

            .summary-item:last-child {
                border-bottom: none;
            }

        .stat-box:hover {
            transform: translateY(-2px);
            transition: transform 0.2s ease;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .product-info:hover {
            transform: translateX(5px);
            transition: transform 0.2s ease;
        }

        .return-item:hover {
            background-color: rgba(220, 53, 69, 0.05) !important;
        }

        .text-purple {
            color: #6f42c1 !important;
        }

        .customer-profile:hover .avatar-circle {
            transform: rotate(5deg);
            transition: transform 0.3s ease;
        }

        .return-info-grid .info-item:hover {
            border-left-color: #ffc107;
            background-color: rgba(255, 193, 7, 0.05);
        }

        .card-header {
            font-weight: 600;
            border-bottom: none;
        }

        .btn:hover {
            transform: translateY(-1px);
            transition: all 0.2s ease;
        }

        .badge {
            font-weight: 600;
        }

        .table th {
            font-weight: 600;
            background-color: #f8f9fa !important;
            border-bottom: 2px solid #e9ecef;
        }

        .alert {
            border-radius: 10px;
        }

        .page-title {
            border-bottom: 3px solid #ffc107;
            padding-bottom: 10px;
            display: inline-block;
        }
    </style>
}