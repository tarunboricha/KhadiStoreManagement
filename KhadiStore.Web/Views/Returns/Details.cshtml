@using KhadiStore.Domain.Entities
@model KhadiStore.Application.DTOs.ReturnDto
@{
    ViewData["Title"] = $"Return Details - {Model.ReturnNumber}";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="page-title text-primary">
            <i class="fas fa-undo-alt me-2 text-warning"></i>
            Return Details - @Model.ReturnNumber
            <small class="text-muted fs-6 ms-2">| रिटर्न विवरण</small>
        </h1>
    </div>
    <div class="col-auto">
        <div class="btn-group">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Returns
            </a>
            <a href="@Url.Action("ReturnReceipt", new { id = Model.Id })" class="btn btn-primary" target="_blank">
                <i class="fas fa-print me-1"></i> Print Receipt
            </a>
            <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })" class="btn btn-success">
                <i class="fas fa-receipt me-1"></i> View Original Sale
            </a>
        </div>
    </div>
</div>

<!-- Success Alert -->
<div class="alert alert-success border-0 shadow-sm mb-4" role="alert">
    <div class="d-flex align-items-center">
        <i class="fas fa-check-double fa-3x me-3"></i>
        <div>
            <h5 class="alert-heading mb-1">Return Processed Successfully</h5>
            <p class="mb-0">
                This return has been completed successfully. Refund has been processed and inventory has been updated.
                <br><small class="text-muted">रिटर्न सफलतापूर्वक पूरा हो गया है। रिफंड प्रोसेस हो गया और इन्वेंटरी अपडेट हो गई।</small>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Return Information Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #138808 0%, #28a745 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-info-circle me-2"></i>Return Information | रिटर्न जानकारी
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="info-section">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-hashtag fa-2x text-primary me-3"></i>
                                    <div>
                                        <small class="text-muted">Return Number</small>
                                        <div class="fw-bold fs-5 text-primary">@Model.ReturnNumber</div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar fa-2x text-info me-3"></i>
                                    <div>
                                        <small class="text-muted">Return Date</small>
                                        <div class="fw-bold">@Model.ReturnDate.ToString("dd MMM yyyy, hh:mm tt")</div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-receipt fa-2x text-success me-3"></i>
                                    <div>
                                        <small class="text-muted">Original Sale</small>
                                        <div>
                                            <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })"
                                               class="fw-bold text-success text-decoration-none">
                                                @Model.SaleInvoiceNumber
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-comment fa-2x text-warning me-3 mt-1"></i>
                                    <div>
                                        <small class="text-muted">Return Reason</small>
                                        <div class="fw-bold">@Model.ReturnReason</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="info-section">
                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-credit-card fa-2x text-purple me-3"></i>
                                    <div>
                                        <small class="text-muted">Refund Method</small>
                                        <div class="fw-bold">
                                            @switch (Model.RefundMethod)
                                            {
                                                case "Cash":
                                                    <i class="fas fa-money-bill-wave text-success me-1"></i>
                                            
                                                    <text>Cash</text>
                                                    break;
                                                case "Card":
                                                    <i class="fas fa-credit-card text-primary me-1"></i>
                                            
                                                    <text>Card Refund</text>
                                                    break;
                                                case "UPI":
                                                    <i class="fas fa-mobile-alt text-info me-1"></i>
                                            
                                                    <text>UPI Transfer</text>
                                                    break;
                                                case "BankTransfer":
                                                    <i class="fas fa-university text-secondary me-1"></i>
                                            
                                                    <text>Bank Transfer</text>
                                                    break;
                                                case "StoreCredit":
                                                    <i class="fas fa-gift text-warning me-1"></i>
                                            
                                                    <text>Store Credit</text>
                                                    break;
                                                default:
                                                    <i class="fas fa-rupee-sign me-1"></i>
                                            
                                                    <text>@Model.RefundMethod</text>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.RefundReference))
                            {
                                <div class="info-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-link fa-2x text-info me-3"></i>
                                        <div>
                                            <small class="text-muted">Refund Reference</small>
                                            <div class="fw-bold font-monospace">@Model.RefundReference</div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="info-item mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-boxes fa-2x text-secondary me-3"></i>
                                    <div>
                                        <small class="text-muted">Total Items</small>
                                        <div class="fw-bold fs-5">@Model.TotalItems</div>
                                    </div>
                                </div>
                            </div>

                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-double fa-2x text-success me-3"></i>
                                    <div>
                                        <small class="text-muted">Return Status</small>
                                        <div>
                                            <span class="badge bg-success text-white fs-6 px-3 py-2">
                                                <i class="fas fa-check-double me-1"></i>Completed
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <div class="mt-4">
                        <div class="border-top pt-3">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-sticky-note me-1"></i>Additional Notes:
                            </h6>
                            <div class="border rounded p-3 bg-light">
                                <div class="font-monospace small">@Html.Raw(Model.Notes.Replace("\n", "<br>"))</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Customer Information -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-user me-2"></i>Customer Information | ग्राहक जानकारी
                </h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(Model.CustomerName))
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="customer-info">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="avatar-circle me-3">
                                        <i class="fas fa-user fa-2x text-white"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted">Customer Name</small>
                                        <div class="fw-bold fs-5">
                                            @if (Model.CustomerId.HasValue)
                                            {
                                                <a href="@Url.Action("Details", "Customers", new { id = Model.CustomerId })"
                                                   class="text-decoration-none text-primary">
                                                    @Model.CustomerName
                                                </a>
                                            }
                                            else
                                            {
                                                @Model.CustomerName
                                            }
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(Model.CustomerPhone))
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="contact-circle me-3">
                                            <i class="fas fa-phone fa-lg text-white"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted">Phone Number</small>
                                            <div class="fw-bold">
                                                @Model.CustomerPhone
                                                <a href="tel:@Model.CustomerPhone" class="btn btn-sm btn-outline-primary ms-2">
                                                    <i class="fas fa-phone me-1"></i>Call
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-user-times fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Walk-in Customer</h5>
                        <p class="text-muted mb-0">No customer information available for this return</p>
                    </div>
                }
            </div>
        </div>

        <!-- Returned Items -->
        <div class="card border-0 shadow-sm">
            <div class="card-header" style="background: linear-gradient(135deg, #6f42c1 0%, #8e44ad 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-boxes me-2"></i>Returned Items | वापस किए गए आइटम
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 40%">
                                    <i class="fas fa-tag text-primary me-1"></i>Product
                                </th>
                                <th class="text-center" style="width: 10%">
                                    <i class="fas fa-undo text-warning me-1"></i>Qty
                                </th>
                                <th class="text-end" style="width: 15%">
                                    <i class="fas fa-rupee-sign text-info me-1"></i>Unit Price
                                </th>
                                <th class="text-end" style="width: 10%">
                                    <i class="fas fa-tag text-success me-1"></i>Discount
                                </th>
                                <th class="text-end" style="width: 10%">
                                    <i class="fas fa-percent text-secondary me-1"></i>GST
                                </th>
                                <th class="text-end" style="width: 15%">
                                    <i class="fas fa-calculator text-danger me-1"></i>Line Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReturnItems)
                            {
                                <tr class="align-middle">
                                    <td>
                                        <div class="product-info">
                                            <div class="fw-semibold text-dark">@item.ProductName</div>
                                            <small class="text-muted">
                                                <i class="fas fa-barcode me-1"></i>Product ID: @item.ProductId
                                            </small>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success text-white fs-6 px-3 py-2">@item.ReturnQuantity</span>
                                        @if (item.OriginalQuantity > item.ReturnQuantity)
                                        {
                                            <br>
                                    
                                            <small class="text-muted">of @item.OriginalQuantity sold</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong>₹@item.UnitPrice.ToString("N2")</strong>
                                    </td>
                                    <td class="text-end">
                                        @if (item.DiscountAmount > 0)
                                        {
                                            <span class="text-success fw-semibold">-₹@item.DiscountAmount.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div>
                                            <small class="fw-semibold">@item.GSTRate%</small><br>
                                            <small class="text-muted">₹@item.GSTAmount.ToString("N2")</small>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <strong class="text-success fs-6">₹@item.LineTotal.ToString("N2")</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary & Actions Sidebar -->
    <div class="col-lg-4">
        <!-- Return Summary -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-calculator me-2"></i>Refund Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="summary-section">
                    <div class="summary-item d-flex justify-content-between py-2">
                        <span><i class="fas fa-calculator text-info me-2"></i>Subtotal:</span>
                        <span class="fw-semibold">₹@Model.SubTotal.ToString("N2")</span>
                    </div>
                    <div class="summary-item d-flex justify-content-between py-2">
                        <span><i class="fas fa-percent text-warning me-2"></i>GST Amount:</span>
                        <span class="fw-semibold">₹@Model.GSTAmount.ToString("N2")</span>
                    </div>
                    <hr class="my-3">
                    <div class="summary-item d-flex justify-content-between py-2">
                        <strong class="fs-5 text-success">
                            <i class="fas fa-rupee-sign me-2"></i>Refund Total:
                        </strong>
                        <strong class="fs-4 text-success">₹@Model.TotalAmount.ToString("N2")</strong>
                    </div>

                    <div class="text-center mt-3 p-3 bg-light rounded">
                        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                        <div class="fw-bold text-success">Refund Completed</div>
                        <small class="text-muted">Processed on @Model.ReturnDate.ToString("dd MMM yyyy")</small>
                    </div>
                </div>

                <div class="action-buttons mt-4 d-grid gap-2">
                    <a href="@Url.Action("ReturnReceipt", new { id = Model.Id })"
                       class="btn btn-primary" target="_blank">
                        <i class="fas fa-print me-1"></i> Print Return Receipt
                    </a>
                    <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })"
                       class="btn btn-success">
                        <i class="fas fa-receipt me-1"></i> View Original Sale
                    </a>
                    <a href="@Url.Action("Create", new { saleId = Model.SaleId })"
                       class="btn btn-outline-warning">
                        <i class="fas fa-plus me-1"></i> Process Another Return
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1"></i> View All Returns
                    </a>
                </div>
            </div>
        </div>

        <!-- Return Processing Timeline -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0 text-dark">
                    <i class="fas fa-history me-2"></i>Return Timeline | रिटर्न टाइमलाइन
                </h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <!-- Return Processed -->
                    <div class="timeline-item active">
                        <div class="timeline-marker bg-success">
                            <i class="fas fa-check-double text-white"></i>
                        </div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">Return Processed Successfully</h6>
                            <p class="timeline-text mb-1">@Model.ReturnDate.ToString("dd MMM yyyy, hh:mm tt")</p>
                            <div class="small text-success mb-2">
                                <i class="fas fa-check me-1"></i> Refund of ₹@Model.TotalAmount.ToString("N2") completed<br>
                                <i class="fas fa-boxes me-1"></i> Inventory updated - items added back to stock<br>
                                <i class="fas fa-clock me-1"></i> Processing completed immediately
                            </div>
                            <small class="text-muted">Return processed and completed in real-time</small>
                        </div>
                    </div>
                </div>

                <div class="mt-4 p-3 bg-success bg-opacity-10 rounded">
                    <div class="text-center">
                        <i class="fas fa-thumbs-up fa-2x text-success mb-2"></i>
                        <div class="fw-bold text-success">All Done!</div>
                        <small class="text-muted">
                            This return has been fully processed.<br>
                            Customer received their refund and inventory was updated.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[title]').tooltip();

            // Animate cards on load
            $('.card').each(function(i) {
                $(this).css('opacity', '0').animate({
                    opacity: 1
                }, 300 + (i * 100));
            });

            // Show success animation
            setTimeout(function() {
                $('.timeline-marker').addClass('pulse-success');
            }, 1000);
        });
    </script>

    <style>
        .info-item {
            border-left: 4px solid transparent;
            padding-left: 1rem;
            transition: border-color 0.3s ease;
        }

            .info-item:hover {
                border-left-color: #28a745;
            }

        .avatar-circle, .contact-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .avatar-circle {
            background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
        }

        .contact-circle {
            background: linear-gradient(135deg, #138808 0%, #28a745 100%);
        }

        .timeline {
            position: relative;
            padding-left: 2rem;
        }

            .timeline::before {
                content: '';
                position: absolute;
                left: 0.75rem;
                top: 0;
                bottom: 0;
                width: 2px;
                background: #28a745;
            }

        .timeline-item {
            position: relative;
            padding-bottom: 2rem;
        }

        .timeline-marker {
            position: absolute;
            left: -2rem;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            border: 3px solid white;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .timeline-marker.pulse-success {
                animation: pulse-success 2s infinite;
            }

        @@keyframes pulse-success {
            0%

        {
            box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.7);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(40, 167, 69, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(40, 167, 69, 0);
        }

        }

        .timeline-title {
            margin: 0;
            font-size: 0.95rem;
            font-weight: 600;
            color: #495057;
        }

        .timeline-text {
            margin: 0;
            font-size: 0.875rem;
            color: #6c757d;
        }

        .summary-item {
            border-bottom: 1px solid #f8f9fa;
        }

            .summary-item:last-child {
                border-bottom: none;
            }

        .text-purple {
            color: #6f42c1 !important;
        }

        .product-info:hover {
            transform: translateX(5px);
            transition: transform 0.2s ease;
        }

        .action-buttons .btn:hover {
            transform: translateY(-2px);
            transition: transform 0.2s ease;
        }
    </style>
}