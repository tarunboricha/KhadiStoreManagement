@model KhadiStore.Application.DTOs.ReturnDto
@{
    ViewData["Title"] = "Return Receipt";
    Layout = null; // No layout for print
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: white;
        }

        .receipt-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border: 2px solid #FF9933;
            border-radius: 10px;
            overflow: hidden;
        }

        .receipt-header {
            background: linear-gradient(135deg, #FF9933 0%, #E6830A 100%);
            color: white;
            padding: 20px;
            text-align: center;
        }

            .receipt-header h1 {
                margin: 0;
                font-size: 2rem;
                font-weight: bold;
            }

            .receipt-header p {
                margin: 5px 0 0 0;
                opacity: 0.9;
            }

        .receipt-body {
            padding: 30px;
        }

        .info-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #FFE4CC;
        }

        .info-column {
            flex: 1;
        }

            .info-column h3 {
                color: #FF9933;
                margin-bottom: 10px;
                font-size: 1.1rem;
            }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

        .info-label {
            font-weight: bold;
            color: #333;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

            .items-table th {
                background: #FFE4CC;
                color: #000080;
                padding: 12px;
                text-align: left;
                font-weight: bold;
                border-bottom: 2px solid #FF9933;
            }

            .items-table td {
                padding: 10px 12px;
                border-bottom: 1px solid #eee;
            }

            .items-table tbody tr:hover {
                background-color: #fafafa;
            }

        .summary-section {
            background: #FFE4CC;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
            font-size: 1.1rem;
        }

        .summary-total {
            font-size: 1.3rem;
            font-weight: bold;
            color: #FF9933;
            border-top: 2px solid #FF9933;
            padding-top: 10px;
            margin-top: 10px;
        }

        .receipt-footer {
            text-align: center;
            color: #666;
            font-size: 0.9rem;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }

        .status-badge {
            background: #d4edda;
            color: #155724;
            padding: 5px 15px;
            border-radius: 15px;
            font-weight: bold;
            display: inline-block;
        }

        .print-button {
            background: #FF9933;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            margin-bottom: 20px;
        }

            .print-button:hover {
                background: #E6830A;
            }

        @@media print {
            .print-button

        {
            display: none;
        }

        body {
            padding: 0;
        }

        .receipt-container {
            border: none;
            box-shadow: none;
        }

        }

        .hindi-text {
            color: #666;
            font-style: italic;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <button class="print-button" onclick="window.print()">
            🖨️ Print Receipt
        </button>
    </div>

    <div class="receipt-container">
        <!-- Header -->
        <div class="receipt-header">
            <h1>🏪 KHADI STORE</h1>
            <p>Return Receipt | रिटर्न रसीद</p>
            <p>Modernizing Traditional Commerce | पारंपरिक वाणिज्य का आधुनिकीकरण</p>
        </div>

        <div class="receipt-body">
            <!-- Return Information -->
            <div class="info-section">
                <div class="info-column">
                    <h3>📋 Return Details</h3>
                    <div class="info-row">
                        <span class="info-label">Return Number:</span>
                        <span>@Model.ReturnNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Return Date:</span>
                        <span>@Model.ReturnDate.ToString("dd MMM yyyy hh:mm tt")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Original Sale:</span>
                        <span>@Model.Sale?.InvoiceNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="status-badge">✅ @Model.Status</span>
                    </div>
                </div>

                <div class="info-column">
                    <h3>👤 Customer Information</h3>
                    <div class="info-row">
                        <span class="info-label">Name:</span>
                        <span>@(Model.Customer?.Name ?? "Walk-in Customer")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Customer?.Phone))
                    {
                        <div class="info-row">
                            <span class="info-label">Phone:</span>
                            <span>@Model.Customer.Phone</span>
                        </div>
                    }
                    <div class="info-row">
                        <span class="info-label">Return Reason:</span>
                        <span>@Model.ReturnReason</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Refund Method:</span>
                        <span>@Model.RefundMethod</span>
                    </div>
                </div>
            </div>

            <!-- Returned Items -->
            <h3 style="color: #FF9933; margin-bottom: 15px;">📦 Returned Items</h3>
            @if (Model.ReturnItems?.Any() == true)
            {
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th style="text-align: center;">Qty</th>
                            <th style="text-align: right;">Unit Price</th>
                            <th style="text-align: right;">GST Rate</th>
                            <th style="text-align: right;">GST Amount</th>
                            <th style="text-align: right;">Discount</th>
                            <th style="text-align: right;">Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ReturnItems)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ProductName</strong><br>
                                    <small style="color: #666;">ID: @item.ProductId</small>
                                </td>
                                <td style="text-align: center;">
                                    <strong>@item.ReturnQuantity</strong>
                                </td>
                                <td style="text-align: right;">₹@item.UnitPrice.ToString("N2")</td>
                                <td style="text-align: right;">@item.GSTRate%</td>
                                <td style="text-align: right;">₹@item.GSTAmount.ToString("N2")</td>
                                <td style="text-align: right;">₹@item.DiscountAmount.ToString("N2")</td>
                                <td style="text-align: right;">
                                    <strong>₹@item.LineTotal.ToString("N2")</strong>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <!-- Summary -->
            <div class="summary-section">
                <h3 style="color: #000080; margin-bottom: 15px;">💰 Refund Summary</h3>

                <div class="summary-row">
                    <span>Items Returned:</span>
                    <span><strong>@(Model.ReturnItems?.Sum(ri => ri.ReturnQuantity) ?? 0)</strong></span>
                </div>

                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span>₹@Model.SubTotal.ToString("N2")</span>
                </div>

                <div class="summary-row">
                    <span>GST Amount:</span>
                    <span>₹@Model.GSTAmount.ToString("N2")</span>
                </div>

                <div class="summary-row">
                    <span>Discount Applied:</span>
                    <span>₹@Model.DiscountAmount.ToString("N2")</span>
                </div>

                <div class="summary-row summary-total">
                    <span>Total Refund Amount:</span>
                    <span>₹@Model.TotalAmount.ToString("N2")</span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.RefundReference))
            {
                <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                    <strong>Refund Reference:</strong> @Model.RefundReference
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                    <strong>Additional Notes:</strong><br>
                    @Model.AdditionalNotes
                </div>
            }

            <!-- Footer -->
            <div class="receipt-footer">
                <p><strong>Thank you for shopping with Khadi Store! | खादी स्टोर के साथ खरीदारी के लिए धन्यवाद!</strong></p>
                <p>Return processed on @DateTime.Now.ToString("dd MMM yyyy hh:mm tt")</p>
                <p style="margin-top: 10px; font-size: 0.8rem;">
                    This is a computer-generated receipt and does not require a signature.<br>
                    For any queries, please contact store management.
                </p>
                <div style="margin-top: 20px; color: #FF9933;">
                    <strong>🇮🇳 Supporting Indian Traditional Crafts 🇮🇳</strong>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-print when page loads (optional)
        // window.addEventListener('load', function() {
        //     window.print();
        // });
    </script>
</body>
</html>